.container
  img.logo(src='/img/EPIC-Logo-Primary-nosub.png')
  h2.text-center Startup Career Fair
  hr
  h2.text-center Talent Portal
  h3.text-center Set up your account

  .col-xs-12.text-center
    p.bg-danger {{message}}

  form(ng-submit='submit()', method='post', ng-show='{{!!req.email}}')
    .form-group
      label(for='email') Email:
      input.form-control(type='text', id='email', value='{{req.email}}', disabled)
    .form-group
      label(for='password') Desired Password:
      input.form-control(type='password', id='password', name='password', ng-model='user.password')
    input.btn.btn-primary.btn-block(type='submit')
